{
  "id": "shop",
  "name": "Shop",
  "version": "2.0.0",
  "description": "Système de boutique complet pour ExilonCMS",
  "author": "ExilonCMS",
  "dependencies": [],
  "permissions": [
    "shop.view",
    "shop.admin",
    "shop.items.manage",
    "shop.categories.manage",
    "shop.orders.manage",
    "shop.purchases"
  ],
  "navigation": {
    "icon": "ShoppingCart",
    "position": 20,
    "items": [
      {
        "label": "shop.nav.shop",
        "href": "/shop",
        "permission": "shop.view"
      },
      {
        "label": "shop.nav.orders",
        "href": "/shop/orders",
        "permission": "shop.purchases",
        "auth": true
      }
    ]
  },
  "admin_section": {
    "id": "shop",
    "label": "shop.admin.section",
    "icon": "ShoppingCart",
    "position": 30,
    "items": [
      {
        "label": "shop.admin.dashboard",
        "href": "/admin/shop",
        "permission": "shop.admin"
      },
      {
        "label": "shop.admin.items",
        "href": "/admin/shop/items",
        "permission": "shop.items.manage"
      },
      {
        "label": "shop.admin.categories",
        "href": "/admin/shop/categories",
        "permission": "shop.categories.manage"
      },
      {
        "label": "shop.admin.orders",
        "href": "/admin/shop/orders",
        "permission": "shop.orders.manage"
      },
      {
        "label": "shop.admin.settings",
        "href": "/admin/shop/settings",
        "permission": "shop.admin"
      }
    ]
  },
  "widgets": [
    {
      "id": "shop_stats",
      "type": "stats_card",
      "context": "admin",
      "position": 30,
      "title": "shop.widgets.stats",
      "permission": "shop.admin"
    }
  ],
  "events": {
    "listen": [],
    "dispatch": []
  },
  "routes": {
    "admin": "/admin/shop",
    "web": "/shop"
  },
