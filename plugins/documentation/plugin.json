{
  "id": "documentation",
  "name": "Documentation",
  "version": "1.0.0",
  "description": "Système de documentation intégré avec support multilingue et navigation automatique",
  "author": "ExilonCMS",
  "dependencies": [],
  "permissions": [
    "documentation.view",
    "documentation.admin"
  ],
  "navigation": {
    "icon": "Book",
    "position": 100,
    "items": [
      {
        "label": "Documentation",
        "href": "/docs",
        "permission": "documentation.view"
      }
    ]
  },
  "admin_section": {
    "id": "documentation",
    "label": "Documentation",
    "icon": "Book",
    "position": 100,
    "items": [
      {
        "label": "Gestion",
        "href": "/admin/documentation",
        "permission": "documentation.admin"
      },
      {
        "label": "Cache",
        "href": "/admin/documentation/cache",
        "permission": "documentation.admin"
      }
    ]
  },
  "widgets": [],
  "events": {
    "listen": [],
    "dispatch": []
  },
  "routes": {
    "admin": "/admin/documentation",
    "web": "/docs"
  },
