{
  "id": "notifications",
  "name": "Notifications",
  "version": "1.0.0",
  "description": "Multi-channel notification system with email, SMS, and push notifications",
  "author": "ExilonCMS",
  "namespace": "ExilonCMS\\Plugins\\Notifications",
  "service_provider": "ExilonCMS\\Plugins\\Notifications\\NotificationsServiceProvider",
  "dependencies": {
    "exiloncms": ">=1.0.0"
  },
  "permissions": [
    "notifications.manage",
    "notifications.templates.manage",
    "notifications.send"
  ],
  "settings": {
    "email_enabled": {
      "type": "boolean",
      "default": true,
      "label": "Enable email notifications"
    },
    "sms_enabled": {
      "type": "boolean",
      "default": false,
      "label": "Enable SMS notifications"
    },
    "push_enabled": {
      "type": "boolean",
      "default": false,
      "label": "Enable push notifications"
    }
  }
}
