{
  "id": "analytics",
  "name": "Analytics",
  "version": "1.0.0",
  "description": "Traffic analytics and user behavior tracking dashboard",
  "author": "ExilonCMS",
  "namespace": "ExilonCMS\\Plugins\\Analytics",
  "service_provider": "ExilonCMS\\Plugins\\Analytics\\AnalyticsServiceProvider",
  "dependencies": {
    "exiloncms": ">=1.0.0"
  },
  "permissions": [
    "analytics.view",
    "analytics.export"
  ],
  "settings": {
    "track_admin": {
      "type": "boolean",
      "default": false,
      "label": "Track admin users"
    },
    "data_retention": {
      "type": "integer",
      "default": 90,
      "label": "Data retention (days)"
    },
    "anonymize_ip": {
      "type": "boolean",
      "default": true,
      "label": "Anonymize IP addresses (GDPR)"
    }
  }
}
